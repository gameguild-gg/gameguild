{
  "name": "game-guild",
  "description": "",
  "version": "1.0.0",
  "author": "",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "build:api": "dotnet build apps/api/GameGuild.API.csproj",
    "build:storybook": "npm run build --workspace=apps/storybook",
    "build:web": "npm run build --workspace=apps/web",
    "clean": "rimraf --glob ./**/node_modules ./**/dist ./**/coverage ./**/build ./**/.next package-lock.json",
    "db:diagram": "npm run db:diagram --workspace=apps/api",
    "dev": "run-p dev:api dev:web",
    "dev:api": "dotnet run --project apps/api/GameGuild.API.csproj",
    "dev:storybook": "npm run dev --workspace=apps/storybook",
    "dev:web": "npm run dev --workspace=apps/web",
    "format": "npm run format --workspaces --if-present",
    "format:web": "npm run format --workspace=apps/web",
    "gource": "old/contributors/gource.sh",
    "install:api": "dotnet restore apps/api/GameGuild.API.csproj",
    "install:apiclient": "npm install @game-guild/apiclient --no-save --workspace=apps/web",
    "install:web": "npm install --workspace=apps/web",
    "lint": "npm run lint --fix --workspaces --if-present",
    "lint:web": "npm run lint --workspace=apps/web",
    "open:tests": "npm run cy:open --workspace=tests",
    "prepare_": "husky install",
    "start": "npm run start --workspaces --if-present",
    "start:api": "dotnet run --project apps/api/GameGuild.API.csproj --configuration Release",
    "start:both": "run-p dev:api dev:web",
    "start:web": "npm run start --workspace=apps/web",
    "test": "npm run test --workspaces --if-present",
    "test:api": "dotnet test apps/api/GameGuild.API.csproj",
    "test:web": "npm run test --workspace=apps/web"
  },
  "devDependencies": {
    "@game-guild/eslint-config": "0.1.0",
    "@game-guild/jest-config": "0.1.0",
    "@game-guild/prettier-config": "0.1.0",
    "@game-guild/typescript-config": "0.1.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.0",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^14.0.1",
    "eslint": "^9",
    "next": "15.4.1",
    "prettier": "^3.5.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "rimraf": "^6",
    "syncpack": "^13.0.3",
    "tailwindcss": "^4.1.11",
    "typescript": "^5"
  },
  "dependencies": {
    "concurrently": "^9.2.0",
    "npm-run-all": "^4.1.5"
  }
}
