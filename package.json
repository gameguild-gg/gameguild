{
  "name": "game-guild",
  "description": "",
  "version": "1.0.0",
  "author": "",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "build:api": "npm run build --workspace=apps/api",
    "build:web": "npm run build --workspace=apps/web",
    "clean": "rimraf --glob ./**/node_modules ./**/dist ./**/coverage ./**/build ./**/.next package-lock.json",
    "db:diagram": "npm run db:diagram --workspace=apps/api",
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\"",
    "dev:api": "npm run dev --workspace=apps/api",
    "dev:web": "npm run dev --workspace=apps/web",
    "format": "npm run format --workspaces --if-present",
    "format:api": "npm run format --workspace=apps/api",
    "format:web": "npm run format --workspace=apps/web",
    "gource": "./contributors/gource.sh",
    "install:api": "npm install --workspace=apps/api",
    "install:apiclient": "npm install @game-guild/apiclient --no-save --workspace=apps/web",
    "install:web": "npm install --workspace=apps/web",
    "lint": "npm run lint --fix --workspaces --if-present",
    "lint:api": "npm run lint --workspace=apps/api",
    "lint:web": "npm run lint --workspace=apps/web",
    "open:tests": "npm run cy:open --workspace=tests",
    "prepare_": "husky install",
    "start": "npm run start --workspaces --if-present",
    "start:api": "npm run start:prod --workspace=apps/api",
    "start:both": "concurrently \"npm:dev:api\" \"npm:dev:web\"",
    "start:web": "npm run start --workspace=apps/web",
    "test": "npm run test --workspaces --if-present",
    "test:api": "npm run test --workspace=apps/api",
    "test:web": "npm run test --workspace=apps/web"
  },
  "devDependencies": {
    "@game-guild/eslint-config": "0.1.0",
    "@game-guild/jest-config": "0.1.0",
    "@game-guild/prettier-config": "0.1.0",
    "@game-guild/typescript-config": "0.1.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.0",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^14.0.1",
    "eslint": "^9",
    "prettier": "^3.5.2",
    "rimraf": "^6",
    "syncpack": "^13.0.3",
    "typescript": "^5"
  }
}
