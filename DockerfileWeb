# Base Image.
FROM node:latest

WORKDIR /app

RUN apt-get clean && apt-get update

COPY . /app

# install dependencies
RUN cd services/web ; NODE_ENV=development npm install
#RUN cd services/web ; NODE_ENV=development npm run build

# start the app
# CMD ["npm", "run", "start:web"]
CMD ["npm", "run", "dev:web"]
