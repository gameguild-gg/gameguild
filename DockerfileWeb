# Base Image.
FROM node:20

ARG API_HOST
ARG API_URL
ARG BACKEND_URL
ARG BUILD_STANDALONE
ARG GHOST_ADMIN_API_KEY
ARG GHOST_ADMIN_DOMAIN
ARG GHOST_CONTENT_API_KEY
ARG GOOGLE_ANALYTICS_MEASUREMENT_ID
ARG GOOGLE_CLIENT_ID
ARG GOOGLE_CLIENT_SECRET
ARG GOOGLE_TAG_MANAGER_ID
ARG IPFS_KEY
ARG NEXTAUTH_SECRET
ARG NEXTAUTH_URL
ARG NEXT_PUBLIC_API_URL
ARG NEXT_PUBLIC_WEB_URL
ARG WEB_URL

WORKDIR /app

RUN apt-get clean && apt-get update

# copy all files to the container. Hack to ensure the .git is present there
RUN git clone https://github.com/gameguild-gg/website.git /app

# install dependencies
RUN npm run install:web
RUN npm run build:web

# get the latest git tag and export as an env var as NEXT_PUBLIC_VERSION and concatenate with the hash of the latest commit
RUN export NEXT_PUBLIC_VERSION=$(git describe --abbrev=0 --tags).$(git rev-parse --short HEAD)

# start the app
CMD ["npm", "run", "start:web"]
