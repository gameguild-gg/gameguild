# Base Image.
FROM node:20

# the arguments are passed at build time in order to be available in the static pages
ARG API_HOST
ARG API_URL
ARG BACKEND_URL
ARG BUILD_STANDALONE
ARG GHOST_ADMIN_API_KEY
ARG GHOST_ADMIN_DOMAIN
ARG GHOST_CONTENT_API_KEY
ARG GOOGLE_ANALYTICS_MEASUREMENT_ID
ARG GOOGLE_CLIENT_ID
ARG GOOGLE_CLIENT_SECRET
ARG GOOGLE_TAG_MANAGER_ID
ARG IPFS_KEY
ARG NEXTAUTH_SECRET
ARG NEXTAUTH_URL
ARG NEXT_PUBLIC_API_URL
ARG NEXT_PUBLIC_WEB_URL
ARG WEB_URL

WORKDIR /app

# Set NODE_ENV to production for proper optimizations
ENV NODE_ENV=production

RUN apt-get clean && apt-get update

# Copy all files to the container, including .git folder for git stats generation
# The .git folder is required for git stats generation in next.config.js during build
COPY . /app

# Install dependencies
RUN npm run install:web

# Build the web app
RUN npm run build:web

# Remove the .git directory after it's been used for stats generation
# This reduces the final image size significantly
RUN rm -rf /app/.git

# start the app
CMD ["npm", "run", "start:web"]
