{
  "compilerOptions": {
    "module": "ESNext",
    "jsx": "react-jsx" ,
    "target": "es6",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "lib": [
      "DOM",
      "WebWorker"
    ] ,
    "strictPropertyInitialization": false
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "src/global.d.ts"
  ]
}
