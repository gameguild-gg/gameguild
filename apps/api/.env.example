# Database Configuration
# Set your database connection string here
# 
# For Development (SQLite):
# DB_CONNECTION_STRING=Data Source=app.db

# For Production (PostgreSQL):
DB_CONNECTION_STRING=Host=localhost;Database=postgres;Username=postgres;Password=postgres

# Application Environment
ASPNETCORE_ENVIRONMENT=Development

# Documentation
DOCUMENTATION_ENABLED=true

# Cloudflare Dynamic DNS Configuration
# Enable/disable the Cloudflare Dynamic DNS service
CLOUDFLARE_DYNAMIC_DNS__ENABLED=false

# Cloudflare API token with Zone:Edit permissions
# Get this from: https://dash.cloudflare.com/profile/api-tokens
CLOUDFLARE_DYNAMIC_DNS__API_TOKEN=your-cloudflare-api-token-here

# Cloudflare Zone ID for your domain
# Find this in your domain's overview page in Cloudflare dashboard
CLOUDFLARE_DYNAMIC_DNS__ZONE_ID=your-cloudflare-zone-id-here

# Interval in minutes to check and update IP address (1-1440)
CLOUDFLARE_DYNAMIC_DNS__INTERVAL_MINUTES=5

# DNS Records Configuration
# You can configure multiple DNS records by incrementing the index (0, 1, 2, etc.)

# First DNS record (root domain)
CLOUDFLARE_DYNAMIC_DNS__DNS_RECORDS__0__TYPE=A
CLOUDFLARE_DYNAMIC_DNS__DNS_RECORDS__0__NAME=@
CLOUDFLARE_DYNAMIC_DNS__DNS_RECORDS__0__TTL=300
CLOUDFLARE_DYNAMIC_DNS__DNS_RECORDS__0__PROXIED=true

# Example: Second DNS record (subdomain)
# CLOUDFLARE_DYNAMIC_DNS__DNS_RECORDS__1__TYPE=A
# CLOUDFLARE_DYNAMIC_DNS__DNS_RECORDS__1__NAME=api
# CLOUDFLARE_DYNAMIC_DNS__DNS_RECORDS__1__TTL=300
# CLOUDFLARE_DYNAMIC_DNS__DNS_RECORDS__1__PROXIED=false

# Example: Third DNS record (another subdomain)
# CLOUDFLARE_DYNAMIC_DNS__DNS_RECORDS__2__TYPE=A
# CLOUDFLARE_DYNAMIC_DNS__DNS_RECORDS__2__NAME=game
# CLOUDFLARE_DYNAMIC_DNS__DNS_RECORDS__2__TTL=300
# CLOUDFLARE_DYNAMIC_DNS__DNS_RECORDS__2__PROXIED=true

# Additional configuration can be added here as needed
