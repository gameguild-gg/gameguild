# GameGuild API Environment Variables
# Copy this file to .env and modify as needed for local development

# =============================================================================
# Application Environment
# =============================================================================

# Application Environment (Development/Production)
ASPNETCORE_ENVIRONMENT=Development

# =============================================================================
# Database Configuration
# =============================================================================

# Database Connection String (primary method)
DB_CONNECTION_STRING=Host=localhost;Port=5432;Database=postgres;Username=postgres;Password=postgres;

# Individual Database Settings (alternative method)
DB_HOST=localhost
DB_PORT=5432
DB_DATABASE=postgres
DB_USERNAME=postgres
DB_PASSWORD=postgres

# Use In-Memory Database (for testing only)
USE_IN_MEMORY_DB=false

# =============================================================================
# JWT Authentication Configuration
# =============================================================================

# JWT Secret Key
JWT_SECRET_KEY=game-guild-super-secret-key-for-development-only-minimum-32-characters

# JWT Issuer
JWT_ISSUER=GameGuild.API

# JWT Audience
JWT_AUDIENCE=GameGuild.Users

# JWT Expiration (optional, defaults to 24 hours)
JWT_EXPIRATION=24:00:00

# =============================================================================
# OAuth Configuration
# =============================================================================

# GitHub OAuth
OAUTH__GITHUB__CLIENTID=
OAUTH__GITHUB__CLIENTSECRET=

# Google OAuth
OAUTH__GOOGLE__CLIENTID=
OAUTH__GOOGLE__CLIENTSECRET=

# =============================================================================
# CORS Configuration
# =============================================================================

# CORS Allowed Origins (array format)
CORS__ALLOWED_ORIGINS__0=http://localhost:3000
CORS__ALLOWED_ORIGINS__1=http://localhost:3001
CORS__ALLOWED_ORIGINS__2=http://localhost:5173

# CORS Allow Credentials
CORS__ALLOW_CREDENTIALS=true

# =============================================================================
# Cloudflare Dynamic DNS Configuration
# =============================================================================

# Enable Cloudflare Dynamic DNS
CLOUDFLARE_DYNAMIC_DNS__ENABLED=false

# Cloudflare API Token
CLOUDFLARE_DYNAMIC_DNS__API_TOKEN=

# Cloudflare Zone ID
CLOUDFLARE_DYNAMIC_DNS__ZONE_ID=

# Update Interval in Minutes
CLOUDFLARE_DYNAMIC_DNS__INTERVAL_MINUTES=5

# DNS Records Configuration (array format)
CLOUDFLARE_DYNAMIC_DNS__DNS_RECORDS__0__NAME=coolify
CLOUDFLARE_DYNAMIC_DNS__DNS_RECORDS__0__TYPE=A
CLOUDFLARE_DYNAMIC_DNS__DNS_RECORDS__0__TTL=300
CLOUDFLARE_DYNAMIC_DNS__DNS_RECORDS__0__PROXIED=true

CLOUDFLARE_DYNAMIC_DNS__DNS_RECORDS__1__NAME=dev
CLOUDFLARE_DYNAMIC_DNS__DNS_RECORDS__1__TYPE=A
CLOUDFLARE_DYNAMIC_DNS__DNS_RECORDS__1__TTL=300
CLOUDFLARE_DYNAMIC_DNS__DNS_RECORDS__1__PROXIED=true

CLOUDFLARE_DYNAMIC_DNS__DNS_RECORDS__2__NAME=dev-api
CLOUDFLARE_DYNAMIC_DNS__DNS_RECORDS__2__TYPE=A
CLOUDFLARE_DYNAMIC_DNS__DNS_RECORDS__2__TTL=300
CLOUDFLARE_DYNAMIC_DNS__DNS_RECORDS__2__PROXIED=true

CLOUDFLARE_DYNAMIC_DNS__DNS_RECORDS__3__NAME=minio
CLOUDFLARE_DYNAMIC_DNS__DNS_RECORDS__3__TYPE=A
CLOUDFLARE_DYNAMIC_DNS__DNS_RECORDS__3__TTL=300
CLOUDFLARE_DYNAMIC_DNS__DNS_RECORDS__3__PROXIED=true

CLOUDFLARE_DYNAMIC_DNS__DNS_RECORDS__4__NAME=console-minio
CLOUDFLARE_DYNAMIC_DNS__DNS_RECORDS__4__TYPE=A
CLOUDFLARE_DYNAMIC_DNS__DNS_RECORDS__4__TTL=300
CLOUDFLARE_DYNAMIC_DNS__DNS_RECORDS__4__PROXIED=true

# =============================================================================
# Development Features
# =============================================================================

# Skip Mock Data Seeding
SKIP_MOCK_DATA_SEEDING=false 